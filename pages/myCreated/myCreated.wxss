.container {
  padding: 20px;
  background-color: #f4f3f3;
}

.search-bar {
  width: 100%;
  height: 40px;
  background-color: white;
  border-radius: 20px;
  padding: 0 10px;
  margin-bottom: 20px;
}

.btn-create {
  width: 100%;
  height: 40px;
  background-color: #0d94ff;
  color: white;
  border-radius: 20px;
  font-size: 14px;
  margin-bottom: 20px;
}

.activity-item {
  background-color: white;
  padding: 15px;
  border-radius: 10px;
  margin-bottom: 10px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
}

.activity-participants {
  font-size: 14px;
  color: #666;
}